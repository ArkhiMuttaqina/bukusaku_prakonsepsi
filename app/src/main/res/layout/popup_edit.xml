<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:outlineAmbientShadowColor="@color/black"
    android:layout_marginLeft="10dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:background="@drawable/bg_popup"
    android:hapticFeedbackEnabled="true"
    android:layout_gravity="center">
    <TextView
        android:layout_marginTop="29dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isi Identitas anda"
        android:layout_gravity="center"
        android:fontFamily="@font/hnlight"
        android:textSize="24dp"
        android:textColor="@color/white"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/hnlight"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        app:hintTextColor="@color/white"
        app:helperTextTextColor="@color/white"
        app:placeholderTextColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Nama"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:counterMaxLength="10"
        app:helperText="Masukan nama anda"
        >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ext_nama"
        android:layout_width="match_parent"
        android:fontFamily="@font/hnlight"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:labelFor="@id/text_nama"
        />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_umur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/hnlight"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:hintTextColor="@color/white"
        app:helperTextTextColor="@color/white"
        app:placeholderTextColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Umur"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:counterMaxLength="2"
        app:helperText="Masukan umur anda"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ext_umur"
            android:layout_width="match_parent"
            android:fontFamily="@font/hnlight"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:labelFor="@id/text_nama"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_bb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hnlight"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/white"
            app:helperTextTextColor="@color/white"
            app:placeholderTextColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Berat badan"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:counterMaxLength="2"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ext_bb"
                android:layout_width="match_parent"
                android:fontFamily="@font/hnlight"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:inputType="number"
                android:labelFor="@id/text_nama"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_tb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hnlight"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/white"
            app:helperTextTextColor="@color/white"
            app:placeholderTextColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Tinggi badan"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"

            app:counterMaxLength="2"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ext_tb"
                android:layout_width="match_parent"
                android:fontFamily="@font/hnlight"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                app:errorContentDescription="belum di isi"
                app:errorEnabled="true"
                android:inputType="number"
                android:labelFor="@id/text_nama"

                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_done_input"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_btn_popup"
            android:clickable="true"
            android:contentDescription="masuk"
            android:text="Selesai"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/hnlight"
            android:textSize="22dp"
           />
    </LinearLayout>


</LinearLayout>