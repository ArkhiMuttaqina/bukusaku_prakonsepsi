<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:outlineAmbientShadowColor="@color/black"
    android:layout_marginLeft="10dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:background="@drawable/bg_popup"
    android:hapticFeedbackEnabled="true"
    android:layout_gravity="center">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indeks Masa Tubuh"
        android:layout_gravity="center"
        android:fontFamily="@font/hnlight"
        android:textSize="24dp"
        android:textColor="@color/white"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="320dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/hnregular"
                android:text="@string/imt1"
                android:textColor="@color/white"
                android:textSize="12dp"/>
            <ImageView
                android:layout_width="196dp"
                android:layout_height="88dp"
                android:background="@drawable/imt"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/hnmedium"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Klasifikasi Ambang Batas IMT Asia (WHO)"
                android:textColor="@color/white"
                android:textSize="12dp"/>
            <ImageView
                android:layout_width="355dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="152dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tabe_imt"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/imt_tutup"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_btn_popup"
            android:clickable="true"
            android:contentDescription="masuk"
            android:text="Tutup"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/hnlight"
            android:textSize="22dp"
           />
    </LinearLayout>


</LinearLayout>