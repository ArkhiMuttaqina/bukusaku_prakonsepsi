<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hitung_gizi">

    <LinearLayout
        android:id="@+id/heading"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/subhead1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/kembali"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_arrow_left"
                android:background="@color/white"
                android:foregroundGravity="right"
                android:layout_marginStart="8dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/subhead2"
            android:gravity="left"

            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Hitung status Gizi"
                android:textAllCaps="false"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/hnlight"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="28dp"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="4dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:background="@drawable/hitung_bg"
                    android:id="@+id/gizi_pee"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hnlight"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:text="Nama : "/>
                        <TextView
                            android:id="@+id/nama_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hnlight"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Nama"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hnlight"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:text="Umur: "/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/umur_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hnlight"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:text="21"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hnlight"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:text="th"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_width="200dp"
                    android:layout_height="95dp"
                    android:padding="13dp"

                    android:orientation="vertical"
                    android:background="@drawable/bb_form"
                    android:layout_gravity="left">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Berat Badan"
                           android:gravity="left"
                           android:fontFamily="@font/hnbold"
                           android:textSize="12dp"
                           android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                            android:gravity="right|bottom"
                        android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/bb_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hnlight"
                                android:textSize="24dp"
                                android:layout_marginEnd="3dp"
                                android:textColor="@color/white"
                                android:text="65"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hnlight"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/white"
                                android:text="kg"/>
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="95dp"
                    android:padding="13dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/bb_form"
                    android:layout_gravity="left">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tinggi Badan"
                            android:gravity="left"
                            android:fontFamily="@font/hnbold"
                            android:textSize="12dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right|bottom"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tb_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hnlight"
                            android:textSize="24dp"
                            android:layout_marginEnd="3dp"
                            android:textColor="@color/white"
                            android:text="65"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hnlight"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/white"
                            android:text="kg"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/hnmedium"
                android:text="Indeks masa tubuh "
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <LinearLayout
                android:background="@drawable/imt_bbi_result"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:padding="13dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/imt_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum Ada Data"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/hnlight"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    />
                <TextView
                    android:id="@+id/imt_count_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/hnlight"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/hnmedium"
                android:text="Berat Badan Ideal"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <LinearLayout
                android:background="@drawable/imt_bbi_result"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:padding="13dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/bbi_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum Ada Data"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/hnlight"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    />
                <TextView
                    android:id="@+id/bbi_count_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18.50"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/hnlight"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    />

            </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_hitung_aja"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/ic_btn_hitung"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="false"
                    android:fontFamily="@font/hnmedium"
                    android:textColor="@color/white"
                    android:outlineSpotShadowColor="@color/rodok_black"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="18dp"
                    android:text="Proses Hitung"
                    android:elevation="3dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_kembaliaja"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/ic_btn_bck"
                android:hapticFeedbackEnabled="true"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/hnmedium"
                android:textColor="@color/white"
                android:outlineSpotShadowColor="@color/rodok_black"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="18dp"
                android:text="Kemabali"
                android:elevation="3dp" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="180dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="left"
                android:foregroundGravity="left">

                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:outlineSpotShadowColor="@color/rodok_black"
                    android:background="@drawable/bg_suggest"
                    android:hapticFeedbackEnabled="true"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.156"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/hnmedium"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="32dp"
                        android:gravity="left"
                        android:text="Mungkin Tertarik ? "
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/link1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:fontFamily="@font/hnmedium"
                        android:layout_marginEnd="32dp"
                        android:gravity="left"
                        android:text="Masalah Gizi "
                        android:textColor="@color/darkk_purple"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/link2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:fontFamily="@font/hnmedium"
                        android:layout_marginEnd="32dp"
                        android:gravity="left"
                        android:text="Masalah Kamu :) "
                        android:textColor="@color/darkk_purple"
                        android:textSize="14sp" />



                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>